<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/card_elevated">

    <!-- Bank Section -->
    <LinearLayout
        android:id="@+id/bankSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/result_item_background"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bank"
            android:padding="8dp"
            android:background="@drawable/icon_background_primary"
            app:tint="@color/primary"
            android:contentDescription="Bank icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Account Section -->
    <LinearLayout
        android:id="@+id/accountSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/result_item_background"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/credit_card"
            android:padding="8dp"
            android:background="@drawable/icon_background_accent"
            app:tint="@color/accent"
            android:contentDescription="Account icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Amount Section -->
    <LinearLayout
        android:id="@+id/amountSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/result_item_background"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ammount"
            android:padding="8dp"
            android:background="@drawable/icon_background_success"
            app:tint="@color/success"
            android:contentDescription="Amount icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="18sp"
                android:textColor="@color/success"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Purpose Section -->
    <LinearLayout
        android:id="@+id/purposeSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/result_item_background"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/message"
            android:padding="8dp"
            android:background="@drawable/icon_background_warning"
            app:tint="@color/warning"
            android:contentDescription="Purpose icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvPurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Currency Section -->
    <LinearLayout
        android:id="@+id/currencySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/result_item_background"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/currency"
            android:padding="8dp"
            android:background="@drawable/icon_background_primary"
            app:tint="@color/primary"
            android:contentDescription="Currency icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/qr"
            app:tint="@color/text_tertiary"
            android:alpha="0.5"
            android:contentDescription="Scan icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_or_select_an_image_to_see_details_here"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

</LinearLayout>
